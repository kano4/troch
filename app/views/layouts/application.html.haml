!!!
%html
  %head
    %title Troch
    = stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/warehouse/style", "web-app-theme/override", :cache => true
    = javascript_include_tag :application
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"} Troch
        #user-navigation
          %ul.wat-cf
            %li
              %a{:href => "#"}= t("web-app-theme.profile", :default => "Profile")
            %li
              %a{:href => "#"}= t("web-app-theme.settings", :default => "Settings")
            %li
              = link_to t("web-app-theme.logout", :default => "Logout"), destroy_user_session_path, :method => :delete
        #main-navigation
          %ul.wat-cf
            %li{ :class => (params[:controller] == "pages" ? "first active" : "first") }
              = link_to "Pages", root_path
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} Troch.
        #sidebar
          = yield :sidebar
