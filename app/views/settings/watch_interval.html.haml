.block
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Watch Interval
    .inner
      = form_tag do
        = radio_button_tag 'interval', 15, @cron_interval.to_i.eql?(15)
        = label_tag "ON(起動)"
        = radio_button_tag 'interval',  0, @cron_interval.to_i.eql?(0)
        = label_tag 'OFF(停止)'
        = submit_tag
