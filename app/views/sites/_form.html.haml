.group
  = f.label :name, t("activerecord.attributes.site.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: Example Site
.group
  = f.label :url, t("activerecord.attributes.site.url", :default => "Url"), :class => :label
  = f.text_field :url, :class => 'text_field'
  %span.description Ex: http://www.example.com
.group
  = f.label :watch_method, t("activerecord.attributes.site.url", :default => "Watch method"), :class => :label
  = f.radio_button :watch_method, 'html_body',  :checked => (@site.watch_method == 'html_body' || @site.watch_method.nil?)
  html(body)
  = f.radio_button :watch_method, 'html_title', :checked => (@site.watch_method == 'html_title')
  html(title)
.group
  = f.label :domain_url, t("activerecord.attributes.site.domain_url", :default => "Domain url"), :class => :label
  = f.text_field :domain_url, :class => 'text_field'
  %span.description Ex: example.com
.group
  = f.label :ssl_url, t("activerecord.attributes.site.ssl_url", :default => "Ssl url"), :class => :label
  = f.text_field :ssl_url, :class => 'text_field'
  %span.description Ex: ssl.example.com
.group
= f.label :sites, :class => :label
- @users.each do |user|
  = check_box_tag("site[user_ids][]", user.id, @site.users.include?(user))
  = user.email
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), sites_path, :class => "text_button_padding link_button"
