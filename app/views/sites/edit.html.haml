.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", sites_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_site_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_site_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Site
    .inner
      = form_for @site, :url => site_path(@site), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
