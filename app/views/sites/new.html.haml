.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", sites_path
      %li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_site_path
  .content
    %h2.title
      = t("web-app-theme.new", :default => "New")
      Site
    .inner
      = form_for :site, :url => sites_path, :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
